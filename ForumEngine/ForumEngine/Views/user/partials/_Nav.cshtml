@model NavModelView
@inject IStringLocalizer<GeneralResource> GeneralResource
@inject Microsoft.Extensions.Options.IOptions<Jugnoon.Settings.Features> featureSettings
@{
    
    string forumcss = "";
   
    string profilecss = "";
    switch (Model.ActiveIndex)
    {
      
        case 5:
            forumcss = " active";
            break;
      

        case 8:
            profilecss = " active";
            break;
    }
}

<div class="list-group m-t-10">
   

    @if (featureSettings.Value.enable_forums)
    {
        <a class="list-group-item d-flex justify-content-between align-items-center list-group-item-action @forumcss" href="@Config.GetUrl("user/topics/" + Model.username)">
            @GeneralResource["_topics"].Value
            @if (Model.CountTopics > 0)
            {
                <span class="badge badge-primary badge-pill">@Model.CountTopics</span>
            }

        </a>
    }

    <a class="list-group-item  list-group-item-action @profilecss" href="@Config.GetUrl("user/profile/" + Model.username)">@GeneralResource["_user_profile"].Value</a>
</div>